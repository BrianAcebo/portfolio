	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently -n web,api -c green,cyan \"npm run dev:frontend\" \"npm run dev:api\"",
		"dev:frontend": "vite",
		"dev:api": "bash scripts/start-api.sh",
		"build": "tsc -b && vite build",
		"start": "concurrently -n web,api -c green,cyan \"npm run start:frontend\" \"npm run start:api\"",
		"start:frontend": "vite preview",
		"start:api": "bash scripts/start-api.sh start",
		"stop": "bash scripts/stop-dev.sh",
		"lint": "eslint .",
		"preview": "vite preview"
	},
